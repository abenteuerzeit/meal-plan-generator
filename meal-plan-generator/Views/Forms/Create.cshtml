@model meal_plan_generator.Models.MealPlan.Form
<link rel="stylesheet" href="~/css/styles.css" />

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Form</h4>
<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <h3 class="text-center">Nutrient Data</h3>

        @foreach(var nutrient in Model.NutrientData)
        {
            <h4>@nutrient.Name Range Settings</h4>
            <div class="container text-center">
                <div class="row row-cols-3 align-items-start input-group">
                    <div class="col mb-3">
                        <div class="form-floating mb-3">
                            <input asp-for=@nutrient.LowerBound class="form-control" min="0" step="any" type="number" placeholder="Enter the  @nutrient.Unit" />
                            <label asp-for=@nutrient.LowerBound class="form-label">minimum (@nutrient.Unit)</label>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-floating mb-3">
                            <input asp-for=@nutrient.IdealAmount class="form-control" min="0" step="any" type="number" placeholder=" @nutrient.Unit" />
                            <label asp-for=@nutrient.IdealAmount class="form-label">ideal (@nutrient.Unit)</label>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-floating mb-3">
                            <input asp-for=@nutrient.UpperBound class="form-control" min="0" step="any" type="number" placeholder=" @nutrient.Unit" />
                            <label asp-for=@nutrient.UpperBound class="form-label">maximum (@nutrient.Unit)</label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
